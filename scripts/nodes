#!/bin/bash

# Molpha Node Management Wrapper Script
# This script provides a convenient way to manage nodes in the Molpha protocol

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
NODE_SCRIPT="$SCRIPT_DIR/manage-nodes.js"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Function to print colored output
print_info() {
    echo -e "${BLUE}ℹ️  $1${NC}"
}

print_success() {
    echo -e "${GREEN}✅ $1${NC}"
}

print_warning() {
    echo -e "${YELLOW}⚠️  $1${NC}"
}

print_error() {
    echo -e "${RED}❌ $1${NC}"
}

# Check if Node.js is available
if ! command -v node &> /dev/null; then
    print_error "Node.js is not installed or not in PATH"
    exit 1
fi

# Check if the manage-nodes.js script exists
if [ ! -f "$NODE_SCRIPT" ]; then
    print_error "manage-nodes.js script not found at $NODE_SCRIPT"
    exit 1
fi

# If no arguments provided, show usage
if [ $# -eq 0 ]; then
    node "$NODE_SCRIPT"
    exit 0
fi

# Set default environment variables if not set
if [ -z "$ANCHOR_PROVIDER_URL" ]; then
    export ANCHOR_PROVIDER_URL="http://127.0.0.1:8899"
fi

if [ -z "$ANCHOR_WALLET" ]; then
    DEFAULT_WALLET="$HOME/.config/solana/id.json"
    if [ -f "$DEFAULT_WALLET" ]; then
        export ANCHOR_WALLET="$DEFAULT_WALLET"
    else
        print_warning "Wallet not found at $DEFAULT_WALLET"
        print_info "Create one with: solana-keygen new"
    fi
fi

# Pass all arguments to the Node.js script
node "$NODE_SCRIPT" "$@"
