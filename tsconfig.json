{
  "compilerOptions": {
    "types": ["mocha", "chai", "jest", "node"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015", "es2017", "es2020"],
    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "resolveJsonModule": true
  }
}
